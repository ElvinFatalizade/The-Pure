<body>
    <div class="page-loader loading">
        <div class="loader">
            <i class="fas fa-spinner fa-spin" aria-hidden="true"></i>
        </div>
    </div>
    <div class="overlay-nav"></div>

  
       @{ 
           Html.RenderPartial("~/Views/Shared/_Header.cshtml");
       }

    <div class="content">
        <section class="bkg-light medium">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <form method="post"  action="@Url.Action("index")" enctype="multipart/form-data" >
                             
                            <div class="boxed-container post">
                                <div class="post-listing">
                                    <div class="block">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="section-header text-center">
                                                    <h3>Post your ad</h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row justify-content-center">
                                            <div class="col-12 col-xl-11">

                                           

                                            </div>
                                        </div>
                                    </div>
                                    <div class="block">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="section-header text-center">
                                                    <h3>Contact details</h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row justify-content-center">
                                            <div class="col-12 col-xl-11">
                                                <div class="row">
                                                    <div class="col-12 col-md-8 col-lg-10">
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" name="Title" id="title" value="" placeholder="Title">
                                                        </div>
                                                    </div>
                                                   
                                                </div>
                                                <div class="row">
                                                    <div class="col-12 col-md-8 col-lg-10">
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" name="LinkName" id="linkname" value="" placeholder="Name">
                                                        </div>
                                                    </div>
                                                    
                                                </div>
                                                <div class="row">
                                                    <div class="col-12 col-md-8 col-lg-10">
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" name="Price" id="price" value="" placeholder="Price">
                                                        </div>
                                                    </div>
                                                    
                                                </div>
                                                <div class="row">
                                                    <div class="col-12 col-md-8 col-lg-10">
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" name="Text" id="text" value="" placeholder="Text">
                                                        </div>
                                                    </div>
                                                   
                                                </div>
                                                <div class="row">
                                                    <div class="col-12 col-md-8 col-lg-10">
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" name="LocationName" id="text" value="" placeholder="Location">
                                                        </div>
                                                    </div>
                                                   
                                                </div>

                                                <div class="row">
                                                    <div class="col-12">
                                                        <div id="map-content" class="map"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="block">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="section-header text-center">
                                                    <h3>Photo gallery</h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row justify-content-center">
                                            <div class="col-12 col-xl-11">
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="form-group">
                                                            <div class="form-group">
                                                              
                                                            </div>
                                                            <input id="file" name="File" multiple type="file">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="row justify-content-center">
                                                        <div class="col-6 col-lg-2">
                                                            <button class="btn btn-primary full-width" type="submit">Submit</button>
                                                        </div>

                                                    </div>
                                                </div>
                                               
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>




    <script src="~/Public/vendor/jquery/jquery.min.js"></script>

    <script src="~/Public/vendor/popper.min.js"></script>
    <script src="~/Public/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Public/vendor/slick/slick.js"></script>
    <script src="~/Public/vendor/select2/dist/js/select2.min.js"></script>
    <script src="~/Public/vendor/ekko-lightbox/ekko-lightbox.js"></script>
    <script src="~/Public/vendor/ckeditor/ckeditor.js"></script>
    <script src="~/Public/vendor/fileinput/fileinput.js"></script>
    <script src="../../www.google.com/recaptcha/api.js" async defer></script>
    <script>
    jQuery(document).ready(function ($) {
        initMap();
    });

    var map, map2;
    var marker;
    window.initMap = function () {
        var mapOptions = {
            center: new google.maps.LatLng(44.4268, 26.1025),
            zoom: 13,
            mapTypeIds: google.maps.MapTypeId.ROADMAP,
            mapTypeControl: false,
            panControl: false,
            scaleControl: false,
            streetViewControl: false,
            zoomControl: true,
            scrollwheel: false,
            gestureHandling: 'cooperative',
            styles: [
                {
                    "featureType": "poi",
                    "stylers": [
                        {"visibility": "off"}
                    ]
                },
                {
                    "featureType": "transit",
                    "elementType": "labels.icon",
                    "stylers": [
                        {"visibility": "off"}
                    ]
                }
            ]
        };

    };
    </script>
   
    <script src="~/Public/js/main.js"></script>
</body>


</html>

